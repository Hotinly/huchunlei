        <td><%= blog.category %></td>
        <td><%= blog.secnario %></td>
        <!-- <td><%= blog.note %></td> -->
        <td><%= blog.level %></td>
        <!-- <td><%= blog.tested %></td> -->
        <!-- <td><%= blog.referto %></td> -->
